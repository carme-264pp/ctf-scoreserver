<div id="contents">
  <div id="menu">
    <span id="menu_item"><a href="../challenge">challenges</a></span>
    <span id="menu_item"><a href="../ranking">ranking</a></span>
    <span id="menu_item"><a href="../announcements">announcements</a></span>
    <span  id="menu_item"><a href="../logout">logout</a></span>
  </div>
  <div id="status">
    <span id="status_item">login : <%=h get_name%></span>
    <span id="status_item"> score : <%=h get_score%></span>
  </div>

  <h2><%=h @abstract%></h2>
  <div id="table">
    <table>
      <tr>
        <td width="16%">point</td>
        <td><%=h @point%></td>
      </tr>
      <tr>
        <td>problem detail</td>
        <td><div id="detail"><%=@detail.gsub(/\n/, "<br>")%></div></td>
      </tr>
      <tr>
        <td>answer?</td>
        <td>
          <form method="post" action="../answer/<%=@id%>">
            <input type="text" name="answer">
            <input type="submit" name="submit" value="submit">
          </form>
        </td>
      </tr>
    </table>
    <a href="../challenge">back</a>
  </div>
</div>
